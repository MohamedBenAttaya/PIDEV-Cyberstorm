{% extends 'homeAdmin.html.twig' %}
<input type="text" placeholder="search...." id="search" onkeyup="searchh()" class="form-control mb-3"/>
{% block content%}

    <br><br><br><br><br>
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Lieu</th>
            <th>Date</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th>Image</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.nom }}</td>
                <td>{{ evenement.lieu }}</td>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.tel }}</td>
                <td>{{ evenement.email }}</td>
                <td><img src="{{ asset("assets/images/") }}{{evenement.image}}" alt="" class="img-fluid"></td>
                <td>{{ evenement.description }}</td>
                <td>
                    {#<a href="{{ path('evenement_show', {'id': evenement.id}) }}">show</a>#}
                    <a href="{{ path('eventModif', {'id': evenement.id}) }} " class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
{% block js %}
    <script>
        function searchh(){
            var sch=$("#search").val();
            $.ajax({
                url: "{{ path('search_voy') }}",
                data:{dat: sch},
                type: "POST",
                success: function(data){
                    console.log('okkk');
                    $('#show').html(data).show();
                }
            });
        }
    </script>
{% endblock %}