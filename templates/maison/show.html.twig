{% extends 'base.html.twig' %}

{% block title %}maison{% endblock %}

{% block content %}
    <!-- //stats -->
    <!--/-->
    <h1>maison</h1>
    <div class="best-rooms py-5">
        <div class="container py-md-5">
            <div class="ban-content-inf row">
                <div class="maghny-gd-1 col-lg-6">
                    <div class="maghny-grid">
                        <figure class="effect-lily border-radius  m-0">
                            <img class="img-fluid" src="{{ asset("assets/images/") }}{{maison.image}}" alt="" />
                            <figcaption>
                                <div>
                                    <h4>{{maison.nom}}</h4>
                                    <p>Prix {{ maison.prix }}$ </p>
                                </div>

                            </figcaption>
                        </figure>
                    </div>
                </div>
                <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                    <div class="row">
                        Description: {{ maison.description }}
                    </div><div class="row">
                        Disponibilit√©: {% if maison.disponibilite == 1 %} Disponible {% else %} Indisponible {% endif %}
                    </div>
                    <div class="row">
                        Adresse: {{ maison.adresse }}
                    </div>
                    <div class="row">
                        <a href="{{ path('maison_all')}}">Afficher les maisons</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //stats -->
{% endblock %}
